[DEFAULTS]
ifmap_server_ip=<%=@ifmap_ip%>
ifmap_server_port=8443
ifmap_username=api-server
ifmap_password=api-server
cassandra_server_list=<% @cassandra_ip.each do |cassandra| -%><%= cassandra %>:9160 <%end-%>
  
zk_server_ip=<%= @zookeeper_ip.collect{ |zookeeper| zookeeper+':2181'}.join(',') %>
listen_ip_addr=0.0.0.0
listen_port=8082
auth=keystone
multi_tenancy=True
log_file=/var/log/contrail/api.log
disc_server_ip=<%=@api_ip%>
disc_server_port=5998
redis_server_ip=<%=@discovery_server_ip%>
rabbit_server=<%=@api_ip%>

[SECURITY]
use_certs=False
keyfile=/etc/contrail/ssl/private_keys/apiserver_key.pem
certfile=/etc/contrail/ssl/certs/apiserver.pem
ca_certs=/etc/contrail/ssl/certs/ca.pem

[KEYSTONE]
auth_host=<%=@keystone_ip%>
auth_protocol=http
admin_user=<%=@admin_user%>
admin_password=<%=@admin_pass%>
admin_tenant_name=admin
admin_token=<%=@admin_token%>
