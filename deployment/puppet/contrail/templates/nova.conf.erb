[DEFAULT]
logdir = /var/log/nova
state_path = /var/lib/nova
lock_path = /var/lib/nova/tmp
volumes_dir = /etc/nova/volumes
dhcpbridge = /usr/bin/nova-dhcpbridge
dhcpbridge_flagfile = /etc/nova/nova.conf
force_dhcp_release = True
injected_network_template = /usr/share/nova/interfaces.template
libvirt_nonblocking = True
libvirt_inject_partition = -1
network_manager = nova.network.manager.FlatDHCPManager
iscsi_helper = tgtadm
sql_connection = mysql://nova:nova@<%=@mysql_ip%>/nova
connection_type = libvirt
compute_driver = libvirt.LibvirtDriver
firewall_driver = nova.virt.libvirt.firewall.IptablesFirewallDriver
rpc_backend = nova.openstack.common.rpc.impl_qpid
rootwrap_config = /etc/nova/rootwrap.conf

network_api_class = nova.network.quantumv2.api.API
libvirt_vif_driver = nova_contrail_vif.contrailvif.VRouterVIFDriver

neutron_admin_tenant_name = service
neutron_admin_username = neutron
neutron_admin_password = <%=@service_token%>
neutron_admin_auth_url = http://<%=@quantum_ip%>:35357/v2.0/
neutron_auth_strategy = keystone
neutron_url = http://<%=@quantum_ip%>:9696/
security_group_api = neutron

volume_api_class = nova.volume.cinder.API
enabled_apis=ec2,osapi_compute,metadata
auth_strategy=keystone
qpid_hostname = <%=@qpid_ip%>
glance_host = <%=@glance_ip%>
quantum_url_timeout = 300
novncproxy_base_url = http://<%=@novncproxy_ip%>:5999/vnc_auto.html
vncserver_enabled = true
vncserver_listen = <%=@vrouter_ip%>
vncserver_proxyclient_address = <%=@vrouter_ip%>
heal_instance_info_cache_interval = 0

[keystone_authtoken]
admin_tenant_name = service
admin_user = nova
admin_password = <%=@service_token%>
auth_host = <%=@keystone_ip%>
auth_port = 35357
auth_protocol = http
signing_dir = /tmp/keystone-signing-nova

